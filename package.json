{
  "name": "my-portfolio-astro",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "dev:prod": "cross-env BASE_PATH=/2025-my-portfolio-astro astro dev",
    "build": "astro build",
    "build:prod": "cross-env NODE_ENV=production BASE_PATH=/2025-my-portfolio-astro astro build",
    "build:ci": "astro build --site https://seiyaiwabuchi.github.io --base /2025-my-portfolio-astro",
    "preview": "astro preview",
    "astro": "astro",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:prod": "cross-env NODE_ENV=test playwright test",
    "test:e2e:custom": "cross-env BASE_PATH=/custom-path playwright test",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:baseline": "playwright test --update-snapshots",
    "test:all": "npm run test:unit && npm run test:e2e",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@astrojs/tailwind": "^6.0.2",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.13",
    "astro": "^5.13.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@rollup/rollup-linux-x64-gnu": "^4.12.0",
    "@testing-library/dom": "^8.20.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/jsdom": "^21.1.1",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^10.0.0",
    "jsdom": "^22.0.0",
    "playwright": "^1.55.0",
    "typescript": "^5.5.0",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "rollup": "^4.12.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "volta": {
    "node": "22.19.0"
  }
}
