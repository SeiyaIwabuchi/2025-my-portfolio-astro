{
  "name": "my-portfolio-astro",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "dev:prod": "cross-env BASE_PATH=/2025-my-portfolio-astro astro dev",
    "build": "astro build",
    "build:prod": "cross-env NODE_ENV=production BASE_PATH=/2025-my-portfolio-astro astro build",
    "build:ci": "cross-env NODE_ENV=production BASE_PATH=/2025-my-portfolio-astro astro build --site https://seiyaiwabuchi.github.io --base /2025-my-portfolio-astro",
    "preview": "astro preview",
    "astro": "astro",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:prod": "cross-env NODE_ENV=test playwright test",
    "test:e2e:custom": "cross-env BASE_PATH=/custom-path playwright test",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:baseline": "playwright test --update-snapshots",
    "test:all": "npm run test:unit && npm run test:e2e",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@astrojs/tailwind": "^5.1.4",
    "astro": "^4.15.12",
    "tailwindcss": "^3.4.16",
    "@tailwindcss/typography": "^0.5.16"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/dom": "^8.20.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/jsdom": "^21.1.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "cross-env": "^10.0.0",
    "jsdom": "^22.0.0",
    "playwright": "^1.55.0",
    "typescript": "^5.5.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "volta": {
    "node": "22.19.0"
  }
}
