            <!-- Enhanced Skills Grid -->
            <div class="grid md:grid-cols-3 gap-6">
              <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-2xl p-6 border border-gray-200 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                <div class="flex items-center mb-4">
                  <div class="w-10 h-10 bg-gradient-to-br from-gray-500 to-gray-600 rounded-xl flex items-center justify-center shadow-lg">
