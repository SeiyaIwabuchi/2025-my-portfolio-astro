<script>
  // Intersection Observer API を使用してスクロールアニメーションを実装
  document.addEventListener('DOMContentLoaded', function() {
    const animatedElements = document.querySelectorAll('[data-animation]');
    
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const element = entry.target as HTMLElement;
          const animationType = element.getAttribute('data-animation');
          
          if (animationType) {
            // アニメーションクラスを追加
            element.classList.add('animate');
            
            // 遅延がある場合の処理
            if (animationType.includes('delay-')) {
              const delayMatch = animationType.match(/delay-(\d+)/);
              if (delayMatch) {
                const delay = parseInt(delayMatch[1]);
                setTimeout(() => {
                  element.style.opacity = '1';
                  element.style.transform = 'translateX(0) translateY(0)';
                }, delay);
              }
            } else {
              // 遅延がない場合は即座にアニメーション開始
              element.style.opacity = '1';
              element.style.transform = 'translateX(0) translateY(0)';
            }
          }
          
          // 一度アニメーションが実行されたら監視を停止
          observer.unobserve(element);
        }
      });
    }, observerOptions);

    // 各アニメーション要素を監視対象に追加
    animatedElements.forEach(element => {
      // 初期状態を設定
      const htmlElement = element as HTMLElement;
      htmlElement.style.opacity = '0';
      htmlElement.style.transition = 'opacity 0.6s ease-out, transform 0.6s ease-out';
      
      const animationType = element.getAttribute('data-animation');
      if (animationType) {
        // アニメーションタイプに応じた初期位置を設定
        if (animationType.includes('fade-in-left')) {
          htmlElement.style.transform = 'translateX(-50px)';
        } else if (animationType.includes('fade-in-right')) {
          htmlElement.style.transform = 'translateX(50px)';
        } else if (animationType.includes('fade-in-up')) {
          htmlElement.style.transform = 'translateY(30px)';
        }
      }
      
      observer.observe(element);
    });
  });
</script>

