---
import Layout from '../layouts/Layout.astro';
import CTA from '../components/CTA.astro';
---

<Layout 
  title="職歴・実績 - フリーランスエンジニアのポートフォリオ | Seiya Iwabuchi's Portfolio"
  description="岩手県SIer企業での2年間の実務経験とフリーランスとしての活動実績。医療機関向けシステム、県向けWebシステム、官公庁向けサーバー構築等の詳細な職歴をご紹介。"
>

<!-- Hero Section -->
<section class="pt-12 pb-8 bg-gradient-to-b from-gray-50 to-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16" data-animation="fade-in-up">
      <h1 class="text-4xl md:text-5xl font-bold text-black mb-6">Experience</h1>
      <p class="text-xl text-gray-600">職歴・実績</p>
    </div>
  </div>
</section>

<!-- Career Overview -->
<section class="pb-20 bg-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16" data-animation="fade-in-up">
      <h2 class="text-3xl md:text-4xl font-bold text-black mb-4">職歴</h2>
      <p class="text-gray-600 text-lg">Career History</p>
    </div>
    
    <!-- Timeline Container -->
    <div class="max-w-5xl mx-auto relative">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-5">
        <div class="grid grid-cols-12 h-full">
          <div class="border-r border-gray-300"></div>
          <div class="border-r border-gray-300"></div>
          <div class="border-r border-gray-300"></div>
          <div class="border-r border-gray-300"></div>
          <div class="border-r border-gray-300"></div>
          <div class="border-r border-gray-300"></div>
          <div class="border-r border-gray-300"></div>
          <div class="border-r border-gray-300"></div>
          <div class="border-r border-gray-300"></div>
          <div class="border-r border-gray-300"></div>
          <div class="border-r border-gray-300"></div>
          <div class="border-r border-gray-300"></div>
        </div>
      </div>

      <!-- Timeline Progress Bar -->
      <div class="absolute left-12 top-0 w-1 h-full bg-gradient-to-b from-blue-200 via-purple-200 to-gray-200 rounded-full">
        <div class="timeline-progress w-full bg-gradient-to-b from-blue-500 via-purple-500 to-gray-500 rounded-full shadow-lg" style="height: 0%; transition: height 2s ease-out;"></div>
      </div>
      
      <!-- Experience Stats -->
      <div class="mb-12 grid grid-cols-1 md:grid-cols-4 gap-6" data-animation="fade-in-up">
        <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-2xl p-6 border border-gray-200 text-center transform hover:scale-105 transition-all duration-300">
          <div class="text-3xl font-bold text-gray-600 mb-2">3+</div>
          <div class="text-sm text-gray-700">総経験年数</div>
        </div>
        <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-2xl p-6 border border-gray-200 text-center transform hover:scale-105 transition-all duration-300">
          <div class="text-3xl font-bold text-gray-600 mb-2">5</div>
          <div class="text-sm text-gray-700">プロジェクト数</div>
        </div>
        <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-2xl p-6 border border-gray-200 text-center transform hover:scale-105 transition-all duration-300">
